<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/manage/login.jsp</pattern>
        <pattern>/manage/register.jsp</pattern>
        <pattern>/manage/error.jsp</pattern>
    </excludes>

    <decorator name="main" page="starter.jsp">
        <pattern>/manage/*</pattern>
    </decorator>
    
    <decorator name="show" page="show.jsp">
        <pattern>/show/*</pattern>
    </decorator>

    <!-- <decorator name="test" page="test.jsp">
        <pattern>/agent.jsp</pattern>
    </decorator> -->
</decorators>